---
import Input from './Input.astro'

interface Props {
    name: string;
    label?: string
}

const {name, label}=Astro.props;
---

<Input name={name} label={label}>
    <input type="email" id={name} name={name} class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 focus:border-purple-600 transition duration-500 px-3 pb-3"/>
</Input>